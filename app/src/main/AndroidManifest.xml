<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elapp.booque">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".base.BooqueApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Booque"
        android:usesCleartextTraffic="true">
        <activity android:name=".presentation.ui.book.transaksi.TransaksiActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Booque.ActionBar"/>
        <activity android:name=".presentation.ui.book.barcode.BarcodeActivity" />
        <activity android:name=".presentation.ui.book.konfirmasi.KonfirmasiActivity"
            android:theme="@style/Theme.Booque.ActionBar" />
        <activity android:name=".presentation.ui.book.edit.EditBookActivity" />
        <activity
            android:name=".presentation.ui.book.detail.BookDetailActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Booque.ActionBar" />
        <activity
            android:name=".presentation.ui.book.bukuku.BukukuActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Booque.ActionBar" />
        <activity
            android:name=".presentation.ui.city.CityActivity"
            android:parentActivityName=".presentation.ui.profile.detail.ProfileDetailActivity"
            android:theme="@style/Theme.Booque.ActionBar" />
        <activity
            android:name=".presentation.ui.province.ProvinceActivity"
            android:parentActivityName=".presentation.ui.profile.detail.ProfileDetailActivity"
            android:theme="@style/Theme.Booque.ActionBar" />
        <activity android:name=".presentation.ui.account.FormActivity" />
        <activity
            android:name=".presentation.ui.article.ArticleWebViewActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Booque.ActionBar" />
        <activity android:name=".presentation.ui.onboarding.OnBoardingActivity" />
        <activity
            android:name=".presentation.ui.profile.detail.ProfileDetailActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Booque.ActionBar" />
        <activity android:name=".presentation.ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.ui.appintro.IntroActivity" />
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>